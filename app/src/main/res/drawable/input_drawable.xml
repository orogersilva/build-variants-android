<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">

        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="#e0e0e0" />
            <corners android:radius="@dimen/edittext_radius" />
            <gradient android:angle="90" android:centerColor="#f1f1f1"
                android:endColor="#f1f1f1" android:startColor="#f1f1f1" />

        </shape>

    </item>

    <item android:state_enabled="true">

        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="#e0e0e0" />
            <corners android:radius="@dimen/edittext_radius" />
            <gradient android:angle="90" android:centerColor="#fafafa"
                android:endColor="#fafafa" android:startColor="#fafafa" />

        </shape>

    </item>

    <item android:state_enabled="false">

        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="#e0e0e0" />
            <corners android:radius="@dimen/edittext_radius" />
            <gradient android:angle="90" android:centerColor="#f3f3f3"
                android:endColor="#f3f3f3" android:startColor="#f3f3f3" />

        </shape>

    </item>

</selector>