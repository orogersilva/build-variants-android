<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/heavy_gray</item>
        <item name="colorAccent">@color/blue</item>

        <item name="actionBarStyle">@style/BuildVariants.Theme.ActionBar</item>

    </style>

    <!-- Configurações de estilo para a ActionBar -->
    <style name="BuildVariants.Theme.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/BuildVariants.Theme.TitleTextStyle</item>
    </style>

    <style name="BuildVariants.Theme.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Configurações de estilo para os campos de texto. -->
    <style name="BuildVariants.InputForm" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/input_drawable</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
